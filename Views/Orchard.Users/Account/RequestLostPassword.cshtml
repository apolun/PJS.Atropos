@{
    WorkContext.Layout.BeforeMain.Add(New.Parts_Title(Title: T("Forgot Password?")), "0");
}

@if (Html.ValidationSummary() != null) {
    <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <i class="fa fa-times-circle"></i>&nbsp;&nbsp;@T("Please correct the errors and try again.")
        <p>@Html.ValidationSummary()</p>
    </div>
}

<div class="row">
    <!-- FORGOT PASSWORD -->
    <div class="col-md-6 col-md-offset-3">
        <h2>@Html.TitleForPage("Forgot Password")</h2>
        @using (Html.BeginFormAntiForgeryPost(Url.Action("RequestLostPassword"), FormMethod.Post, new { @class = "white-row" })) {
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="username">@T("Username or email")</label>
                        @Html.TextBox("username", "", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input type="submit" value="@T("Send Request")" class="btn btn-primary pull-right push-bottom" data-loading-text="Loading...">
                </div>
            </div>
        }
    </div>
    <!-- /FORGOT PASSWORD -->
</div>