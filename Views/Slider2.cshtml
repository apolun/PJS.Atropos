@{
    Script.Require("Superslides");
    Style.Require("Superslides");
}

<!-- SUPERSLIDES SLIDER -->
<section id="slider" class="half-screen" data-autoplay="false" data-mouseover-stop="false">
    <!-- data-autoplay = 'false or miliseconds. Eg.: 5s = '5000' ; data-mouseover = stop on mouseover. 'true' or 'false') -->
    <!-- slider navigation -->
    <nav class="slides-navigation">
        <a class="prev" href="#"></a>
        <a class="next" href="#"></a>
    </nav>

    <ul class="slides-container">
        <!-- Item 1 -->
        <li>
            <div class="image-caption">
                <div class="inner text-left">
                    <!-- text center , text-left or text-right -->
                    <div class="block">
                        <h1>RESPONSIVE</h1>
                    </div>

                    <div class="block">
                        <h3>PASSION . PRECISION . SIMPLICITY</h3>
                    </div>

                    <div class="block">
                        <p class="dark">Atropos is a multipurpose template for business or portfolio website.</p>
                    </div>

                </div>
            </div>

            <!--<span class="overlay"></span>-->
            <div style="background-image: url('@Href(Html.ThemePath(WorkContext.CurrentTheme, "/Content/slider/parallax_bg.jpg"))');" class="fullscreen-img"></div>
        </li>

        <!-- Item 2 -->
        <li>
            <div class="image-caption">
                <div class="inner text-center">
                    <!-- text center , text-left or text-right -->
                    <div class="block">
                        <h1>RESPONSIVE</h1>
                    </div>

                    <div class="block">
                        <h2>PASSION . PRECISION . SIMPLICITY</h2>
                    </div>

                </div>
            </div>

            <!--<span class="overlay"></span>-->
            <div style="background-image: url('@Href(Html.ThemePath(WorkContext.CurrentTheme, "/Content/slider/parallax_bg.jpg"))');" class="fullscreen-img"></div>
        </li>

        <!-- Item 3 -->
        <li>
            <div class="image-caption">
                <div class="inner text-right">
                    <!-- text center , text-left or text-right -->
                    <div class="block">
                        <h2>RESPONSIVE</h2>
                    </div>

                    <div class="block">
                        <h3>Text aligned to right</h3>
                    </div>

                    <div class="block text-left">
                        <h2>Text aligned to left</h2>
                    </div>

                    <div class="block text-left">
                        <p>Align the text by your wish.</p>
                    </div>

                </div>
            </div>

            <!--<span class="overlay"></span>-->
            <div style="background-image: url('@Href(Html.ThemePath(WorkContext.CurrentTheme, "/Content/slider/clouds.jpg"))');" class="fullscreen-img"></div>
        </li>

        <!-- Item 4 -->
        <li>
            <!-- no background image -->
            <div class="image-caption">
                <div class="inner text-center noimg-slider">
                    <h1>WELCOME</h1>
                    <p class="lead">HTML5 . CSS3 . Bootstrap 3 . Unlimited Colors</p>
                    <a href="#" class="btn btn-primary btn-lg">Let's Start!</a>
                </div>
            </div>
        </li>

        <!-- Item 5 -->
        <li class="styleBackground">
            <!-- background color -->
            <div class="image-caption">
                <div class="inner text-center noimg-slider">
                    <h1>WELCOME</h1>
                    <p class="lead">HTML5 . CSS3 . Bootstrap 3 . Unlimited Colors</p>
                    <a href="#" class="btn btn-primary btn-lg">Let's Start!</a>
                </div>
            </div>
        </li>
    </ul>
</section>
<!-- /SUPERSLIDES SLIDER -->